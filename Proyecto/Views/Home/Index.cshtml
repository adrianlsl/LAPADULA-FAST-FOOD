@{
    ViewBag.Title = "Admin Page";
}

<h1 class="mt-4">Inicio</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Detalle de los productos</li>
</ol>
<div class="row">
    <div class="col-8">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body" style="padding:50px">
                <div class="d-flex justify-content-between">
                    <h2>Total Productos</h2>
                    <h3 id="total-productos">18</h3>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between" style="padding:50px">
                <a class="small text-white stretched-link" href="@Url.Action("Producto","Home")">Ver Productos</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-4">
       
    </div>
    
</div>
@section scripts{

    <script>
        $(document).ready(function () {

            jQuery.ajax({
                url: '@Url.Action("ListarProducto", "Tienda")',
                type: "GET",
                data: null,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    if (data.data != null) {
                        $("#total-productos").text(data.data.length);
                    }
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            });

        })
        
    </script>

    }